# Copy to .env and adjust values as needed

# MongoDB
COLLECTOR_MONGO_URI=mongodb://localhost:27017
COLLECTOR_MONGO_DB=contract_collector

# API keys
COLLECTOR_SAM_GOV_API_KEY=   # Free key from SAM.gov Account Details

# Scraping
COLLECTOR_MAX_CONCURRENCY=5
COLLECTOR_RATE_LIMIT_PER_DOMAIN=2.0
COLLECTOR_REQUEST_TIMEOUT_S=30
COLLECTOR_MAX_RETRIES=3
COLLECTOR_HEADLESS=true
COLLECTOR_BROWSER_TYPE=chromium

# Redis (optional â€” for distributed worker queue)
COLLECTOR_REDIS_URL=redis://localhost:6379/0

# Logging
COLLECTOR_LOG_LEVEL=INFO
COLLECTOR_LOG_JSON=false   # Set true for CI/production (JSON output)
